html
  head
    title Default
    style.
      .default {
      padding: .5in;
      font-size: 11px;
      font-family: 'Times', serif;
      }
      .default .head {
      text-align: center;
      font-family: sans-serif;
      font-size: 24px;
      }
      .default .sub-head {
      text-align: center;
      margin-bottom: 16px;
      margin-top: 5px;
      }
      .default p {
      margin: 0px;
      font-weight: bold;
      font-size: 11px;
      }
      .default hr {
      margin: 5px 0px;
      background: black
      }
      .default .item {
      margin-bottom: 10px;
      line-height: 1.6em;
      }
      .default .item .title {
      font-weight: bold;
      }
  body
    div.default
      div.head= firstName + " " + lastName
      div.sub-head= phoneNumber + " â€¢ " + email

      if work.length > 0
        p Professional Experience
        hr
        each w in work
          div.item
            span.title #{w.title},&nbsp;
            span.origin #{w.origin}
            div.date #{w.dateFromString} - #{w.dateToString}
            div.description #{w.description}

      if ed.length > 0
        p Education
        hr
        each e in ed
          div.item
            span.title #{e.title},&nbsp;
            span.origin #{e.origin},&nbsp;
            span.date #{e.dateString}

      if project.length > 0
        p Projects
        hr
        each p in project
          div.item
            span.title #{p.title},&nbsp;
            span.date #{p.dateFromString} - #{p.dateToString}
            div.description #{p.description}

      if honor.length > 0
        p Honors
        hr
        each h in honor
          div.item
            span.title #{h.title},&nbsp;
            span.date #{h.dateString}
            div.description #{h.description}
